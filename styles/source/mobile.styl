// Small screens
@media only screen and (max-width: 40em)

    navheight = 2em

    section
        padding: 1em 0

        h1
            font-size: 20pt

        p
            box-sizing: border-box
            font-size: 10pt
            padding: 0 2em
            width: 100%

        &.header
            padding-bottom: 2em

            .header-content
                padding-top: 1em

                h1
                    font-size: 35pt
                    line-height: 2em

                h2
                    font-size: 12pt
                    margin: -0.8em auto 4em

                button
                    box-shadow: 0.2em 0.2em color2
                    font-size: 9pt
                    margin: -0.1em 0 0 -0.1em
                    padding: 0.5em 1em

                    &:active
                        box-shadow: 0.1em 0.1em color2
                        margin: 0

            nav
                display: none
