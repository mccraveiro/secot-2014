/*! index.css */

// being used
color1 = rgb(217, 0, 0)
color2 = rgb(180, 180, 180)

navheight = 4em

html
body
    height: 100%
    margin: 0
    padding: 0
    width: 100%

body
    font-family: 'Exo 2', sans-serif;

section
    padding: 1em 0
    text-align: center

    p
        line-height: 1.5em
        margin: 1em auto
        text-align: justify
        width: 800px

    &.header
        background-color: white
        box-sizing: border-box
        color: color1
        font-size: 16pt
        overflow: hidden
        padding-bottom: 7em

        .header-content
            padding-top: 2em

            h1
                font-family: 'Open Sans', sans-serif
                font-size: 70pt
                font-style: italic
                font-weight: 300
                line-height: 2em
                margin: 0 auto
                vertical-align: middle

            h2
                color: color1
                font-weight: 100
                font-size: 24pt
                margin: -0.8em auto 4em

            button
                background: color1
                border: 0
                box-shadow: 0.4em 0.4em color2
                color: white
                font-size: 18pt
                font-weight: 700
                margin: -0.2em 0 0 -0.2em
                outline: 0
                padding: 1em 2em

                &:active
                    box-shadow: 0.2em 0.2em color2
                    margin: 0

        nav
            background-color: color1
            bottom: 0
            color: white
            font-size: 16pt
            font-weight: 100
            height: navheight
            left: 0
            line-height: navheight
            position: absolute
            vertical-align: middle
            width: 100%

            &.fixed
                position: fixed
                top: 0

            .nav-content
                display: inline-block

                a
                    color: white
                    cursor: pointer
                    display: inline-block
                    padding: 0 2em
                    text-decoration: none
                    font-size: 14pt

                    &:hover
                        text-decoration: underline
