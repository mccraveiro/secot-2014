/*! index.css */

// not being used
color0 = #D00C18 // vermelho secot
color1 = #2E0927 // navy
color3 = #FF2D00
color4 = #04756F // cinza
color5 = #FFF1C7
// being used
color2 = #D90000 // vermelho
color6 = rgb(180, 180, 180)

navheight = 4em

html
body
    height: 100%
    margin: 0
    padding: 0
    width: 100%

body
    font-family: 'Exo 2', sans-serif;

section
    padding: 3em 0
    text-align: center

    p
        margin: 1em auto
        text-align: justify
        width: 800px

    &.header
        background-color: white
        box-sizing: border-box
        color: color2
        font-size: 16pt
        height: 100%
        overflow: hidden
        padding-bottom: 7em

        .header-content
            padding-top: 2em

            h1
                font-family: 'Open Sans', sans-serif
                font-size: 70pt
                font-style: italic
                font-weight: 300
                line-height: 2em
                margin: 0 auto
                vertical-align: middle

            h2
                color: color2
                font-weight: 100
                font-size: 24pt
                margin: -0.8em auto 4em

            button
                background: color2
                border: 0
                box-shadow: 0.4em 0.4em color6
                color: white
                font-size: 18pt
                font-weight: 700
                margin: -0.2em 0 0 -0.2em
                outline: 0
                padding: 1em 2em

                &:active
                    box-shadow: 0.2em 0.2em color6
                    margin: 0

        nav
            background-color: color2
            bottom: 0
            color: white
            font-size: 16pt
            font-weight: 100
            height: navheight
            left: 0
            line-height: navheight
            position: absolute
            vertical-align: middle
            width: 100%

            &.fixed
                position: fixed
                top: 0

            .nav-content
                display: inline-block

                a
                    color: white
                    cursor: pointer
                    display: inline-block
                    padding: 0 2em
                    text-decoration: none

                    &:hover
                        text-decoration: underline

#sobre:before
#increvase:before
#local:before
#agenda:before
#patrocinadores:before
#palestrantes:before
    display: block
    content: " "
    margin-top: -navheight
    height: navheight
    visibility: hidden
