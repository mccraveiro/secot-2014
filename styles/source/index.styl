/* IconMoon */

@font-face
    font-family: 'icomoon'
    src: url('../fonts/icomoon.eot?-xhlqd2')
    src: url('../fonts/icomoon.eot?#iefix-xhlqd2') format('embedded-opentype'), url('../fonts/icomoon.woff?-xhlqd2') format('woff'), url('../fonts/icomoon.ttf?-xhlqd2') format('truetype'), url('../fonts/icomoon.svg?-xhlqd2#icomoon') format('svg')
    font-weight: normal
    font-style: normal

[class^="icon-"], [class*=" icon-"]
    font-family: 'icomoon'
    speak: none
    font-style: normal
    font-weight: normal
    font-variant: normal
    text-transform: none
    line-height: 1
    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

.icon-asterisk:before
    content: "\61"

/*! index.css */

color0 = #D00C18 // vermelho secot

color1 = #2E0927 // navy
color2 = #D90000 // vermelho
color3 = #FF2D00
color4 = #04756F // cinza
color5 = #FFF1C7

html
body
    height: 100%
    margin: 0
    padding: 0
    width: 100%

body
    font-family: 'Exo 2', sans-serif;

section
    padding: 3em 0
    text-align: center

    p
        margin: 1em auto
        text-align: justify
        width: 800px

    &.header
        background-color: color1
        box-sizing: border-box
        color: white
        font-size: 16pt
        height: 100%
        overflow: hidden
        padding-bottom: 7em

        .header-content
            padding-top: 2em

            h1
                font-family: 'Open Sans', sans-serif
                font-size: 70pt
                font-style: italic
                font-weight: 300
                line-height: 2em
                margin: 0 auto
                vertical-align: middle

            h2
                color: color2
                font-weight: 100
                font-size: 24pt
                margin: -0.8em auto 4em

            button
                background: white
                border: 0
                box-shadow: 0.4em 0.4em color4
                color: black
                font-size: 18pt
                font-weight: 700
                margin: -0.2em 0 0 -0.2em
                outline: 0
                padding: 1em 2em

                &:active
                    box-shadow: 0.2em 0.2em color4
                    margin: 0

        nav
            background-color: color2
            bottom: 0
            color: white
            font-size: 16pt
            font-weight: 100
            height: 4em
            left: 0
            line-height: 4em
            position: absolute
            vertical-align: middle
            width: 100%

            &.fixed
                position: fixed
                top: 0

            .nav-content
                display: inline-block

                span
                    margin: 0 2em

                .separator
                    color: color5
                    display: none
                    font-size: 0.5em
                    line-height: 4em
                    margin: 0 2em
                    vertical-align: middle
