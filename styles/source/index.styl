/*! index.css */

color1 = #D00C18

html
body
    height: 100%
    margin: 0
    padding: 0
    width: 100%

section
    padding: 3em 0
    text-align: center

    p
        margin: 1em auto
        text-align: justify
        width: 800px

    &.header
        background-color: color1
        box-sizing: border-box
        color: white
        font-family: 'Open Sans', sans-serif;
        height: 100vh

        h1
            font-weight: 300
            font-size: 10vmin
            font-style: italic
            line-height: 20vmin
            margin: 10vmin auto 0
            vertical-align: middle

            strong
                display: inline-block
                font-weight: 800
                font-size: 20vmin
                font-style: normal
                margin: -5vmin 1vmin 0
                vertical-align: middle

        h2
            font-weight: 500
            font-size: 4vmin
            margin: 1vmin auto 10vmin

        button
            background: white
            border: 0
            box-shadow: 0.4em 0.4em rgb(120, 120, 120)
            color: black
            font-size: 3vmin
            padding: 1em 2em
